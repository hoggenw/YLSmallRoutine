.container {
  display: flex;
  flex-direction: column;
}

.head-image {
  width: 100%;
  height: 460rpx;
}
.music-image {
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  margin-left:  -51rpx;
  top: 180rpx;
  opacity: 0.6;
}

.author-data {
  display: block;
  flex-direction: row;
  margin-top: 20rpx;
  margin-left: 20rpx;
}

.author-data-header {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  vertical-align: middle;
}

.author-data-name {
  margin-left: 20rpx;
  font-size: 28rpx;
  line-height: 60rpx;
  margin-right: 20rpx;
  color: #666666;
  vertical-align: middle;
}

.author-data-hint {
  font-size: 24rpx;
  /* line-height: 26rpx; */
  margin-right: 20rpx;
  color: #999999;
}

.author-data-time {
  font-size: 24rpx;
  line-height: 60rpx;
  margin-right: 20rpx;
   margin-left: 10rpx;
  color: #999999;
  vertical-align: middle;
}

.artical-title {
  font-size: 36rpx;
  font-weight: 700;
  margin: 40rpx 20rpx 20rpx 40rpx;
  color: #4b55bc;
  letter-spacing: 6rxp;
}

.line-view{
  margin-top: 20rpx;
}
.circle-image {
  float: right;
  vertical-align: middle;
  margin-right: 40rpx;
}
.like-image {
  height: 80rpx;
  width: 80rpx;
  border-radius: 40rpx;
}
.share-image {
  margin-left: 30rpx;
  height: 80rpx;
  width: 80rpx;
  border-radius: 40rpx;
}

.line{
  height: 1px;
  width: 670rpx;
  background-color: #e0e0e0;
  vertical-align: middle;
  position: relative;
  margin-left: 40rpx;
  margin-right: 40rpx;
  z-index: -99;
  top: 40rpx;
}



.content {
  color: #666666;
   margin-left: 40rpx;
  margin-right: 40rpx;
   letter-spacing: 4rxp;
   line-height: 50rpx;
   margin-bottom: 60rpx;
}